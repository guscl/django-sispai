var conn;
      
function mudarEstado(){
	try{
		inicializaAjax();
		conn.onreadystatechange = stateChange;
		conn.open('POST', "/core?change=1",true);
		conn.send(null);
	}catch(e){
		alert('falha no ajax: '+e.message);
	}		
}
	  
function inicializaAjax(){
	//se for windows explorer mais antigo
	if(window.ActiveXObject){
		conn = new ActiveXObject("Microsoft.XMLHTTP");
	}else if(window.XMLHttpRequest){
		//para as versoes mais novas do IE e outros navegadores
		conn = new XMLHttpRequest();
		conn.overrideMimeType("text/plain");//algumas versoes firefox dao pau sem isso 
	}else{
		throw new TypeError("seu navegador Ã© velho demais!");
	}
}
      
function stateChange(){
	if(conn.readyState==4 && conn.status==200){
		document.getElementById("descricao").innerHTML=conn.responseText;
	}
}
      
function clearText(){
	document.getElementById("descricao").innerHTML="";
}

